<!--pages/addressAddMember/addressAddMember.wxml-->
<view class="all">
  <view class="name">
    <view class="label">姓名:</view>
    <view class="input-wrap">
          <input class="input" placeholder="收货人姓名" />
    </view>
  </view>
  <view class="hr"></view>
  <view class="name">
    <view class="label">国家:</view>
    <view class="input-wrap">
          <picker bindchange="bindCountryChange" value="{{countryindex}}" range="{{country}}">
            <view class="picker">
              <text>{{country[countryindex]}}</text>
            </view>
          </picker>
    </view>
  </view>
  <view class="hr"></view><view class="name">
    <view class="label">省/州:</view>
    <view class="input-wrap">
      <picker bindchange="bindProvinceChange" value="{{provinceindex}}" range="{{province}}">
            <view class="picker">
              <text>{{province[provinceindex]}}</text>
            </view>
          </picker>
    </view>
  </view>
  <view class="hr"></view><view class="name">
    <view class="label">城市:</view>
    <view class="input-wrap">
          <picker bindchange="bindCityChange" value="{{cityindex}}" range="{{city}}">
            <view class="picker">
              <text>{{city[cityindex]}}</text>
            </view>
          </picker>
    </view>
  </view>
  <view class="hr"></view>
  <view class="name">
    <view class="label">地址:</view>
    <view class="input-wrap">
          <input class="input" placeholder="街道地址" />
    </view>
  </view>
  <view class="hr"></view>
  <view class="name">
    <view class="label">邮编:</view>
    <view class="input-wrap">
          <input class="input" placeholder="邮政编码" />
    </view>
  </view>
  <view class="hr"></view>
  <view class="name">
    <view class="label">电话:</view>
    <view class="input-wrap">
          <input class="input" placeholder="联系方式" />
    </view>
  </view>
  <view class="hr"></view>
 
</view>

<view class="btn-wrap">
  <button class="btn" style="background-color:#0398e7">保存</button>
</view>
